
@{
    ViewBag.Title = "Edit";

}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h2>Editar local</h2>

    <div>

        <form asp-controller="LocalController" asp-action="Edit" method="post">
            <label for="empN">Nombre de la empresa:</label><br>
            <input type="text" id="empN" name="empN" placeholder="@ViewBag.NombreEmpresa" value="@ViewBag.NombreEmpresa" required><br />

            <label for="cif">CIF:</label><br>
            <input type="text" id="cif" name="cif" placeholder="@ViewBag.CIF" value="@ViewBag.CIF" required><br />

            <label for="user">Usuario:</label><br>
            <input type="text" id="user" name="user" placeholder="@ViewBag.Usuario" value="@ViewBag.Usuario" required><br />

            <label for="password">Contraseña:</label><br>
            <input type="text" id="password" name="password" placeholder="@ViewBag.Contraseña" value="@ViewBag.Contraseña" required><br />

            <label for="dir">Dirección:</label><br>
            <input type="text" id="dir" name="dir" placeholder="@ViewBag.Direccion" value="@ViewBag.Direccion" required><br />

            <label for="tel">Teléfono:</label><br>
            <input type="number" id="tel" name="tel" placeholder="@ViewBag.Telefono" value="@ViewBag.Telefono" required><br />

            <label for="afM">Aforo Máximo:</label><br>
            <input type="number" id="afM" name="afM" placeholder="@ViewBag.AforoM" value="@ViewBag.AforoM" required><br />

            <input type="hidden" id="idEmpresa" name="idEmpresa" value="@ViewBag.IdEmpresa">

            <input type="submit" value="Submit">
        </form>

    </div>
</body>
</html>
