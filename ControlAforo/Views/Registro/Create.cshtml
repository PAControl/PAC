
@{
    ViewBag.Title = "Create";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h2>Crear local</h2>

    <div>

        <form asp-controller="LocalController" asp-action="Create" method="post">
            <label for="empN">Nombre de la empresa:</label><br />
            <input type="text" id="empN" name="empN" required><br />

            <label for="cif">CIF:</label><br />
            <input type="text" id="cif" name="cif" required><br />

            <label for="user">Usuario:</label><br />
            <input type="text" id="user" name="user" required><br />

            <label for="password">Contraseña:</label><br />
            <input type="text" id="password" name="password" required><br />

            <label for="dir">Dirección:</label><br />
            <input type="text" id="dir" name="dir" required><br />

            <label for="tel">Teléfono:</label><br />
            <input type="number" id="tel" name="tel" required><br />

            <label for="afM">Aforo Máximo:</label><br />
            <input type="number" id="afM" name="afM" required><br />

            <input type="submit" value="Submit">
        </form>

    </div>
</body>
</html>
